@using EPlayersAspNetCoreTeste.Models
@model Jogador
@{
    ViewData["title"] = "Jogadores";
}

<form method="POST" action='@Url.Action("Cadastrar")'>
    <label>ID do Jogador</label>
    <input type="text" name="IdJogador">

    <label>Nome do Jogador</label>
    <input type="text" name="Nome">

    <label>ID da Equipe</label>
    <input type="text" name="IdEquipe">

    <button type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID Jogador</th>
        <th>Nome Jogador</th>
        <th>ID Equipe</th>
    </thead>
    <tbody>
        @foreach (Jogador item in ViewBag.Jogadores)
        {
            <tr>
                <td>@item.IdJogador</td>
                <td>@item.Nome</td>
                <td>@item.IdEquipe</td>
            </tr>
        }
    </tbody>

</table>